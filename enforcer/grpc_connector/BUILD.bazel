load("@com_google_protobuf//bazel:proto_library.bzl", "proto_library")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("@rules_rust_prost//:defs.bzl", "rust_prost_library")

package(default_visibility = ["//enforcer:__subpackages__"])

rust_library(
    name = "grpc_connector",
    srcs = ["src/util.rs"],
    visibility = ["//visibility:public"],
    deps = [
        "@crates//:anyhow",
        "@crates//:hyper-util",
        "@crates//:log",
        "@crates//:tokio",
        "@crates//:tokio-retry",
        "@crates//:tonic",
        "@crates//:tower",
    ],
)

rust_test(
    name = "grpc_connector_util_test",
    size = "small",
    srcs = ["test/util_test.rs"],
    tags = ["test"],
    deps = [
        ":grpc_connector",
        ":grpc_connector_test_rust",
        "@crates//:tempfile",
        "@crates//:tokio",
        "@crates//:tokio-stream",
        "@crates//:tonic",
        "@crates//:tower",
    ],
)

proto_library(
    name = "grpc_connector_test_proto",
    srcs = ["test/test_service.proto"],
    visibility = ["//visibility:public"],
)

rust_prost_library(
    name = "grpc_connector_test_rust",
    proto = ":grpc_connector_test_proto",
    visibility = ["//visibility:public"],
)
