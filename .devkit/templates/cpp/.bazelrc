build --incompatible_strict_action_env
build --strip=always

build:run_all_tests --cache_test_results=no

try-import %workspace%/google_internal/.bazelrc
{% if toolchain == "llvm_custom_sysroot" -%}
coverage --cache_test_results=no
coverage --experimental_generate_llvm_lcov
coverage --instrumentation_filter=^//src(?!:main)
{% endif -%}
{% if toolchain == "llvm_bootstrapped" -%}
common --experimental_cc_static_library
{% endif -%}
common --repo_env=BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1
