{
  "version": "2.0.0",
  "tasks": [
{% if toolchain == "llvm_custom_sysroot" %}
    {
      "label": "Generate compile_commands.json",
      "command": "bazel",
      "args": ["run", "@hedron_compile_commands//:refresh_all"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Watch coverage on open",
      "command": "${command:coverage-gutters.watchCoverageAndVisibleEditors}",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
{% endif %}
  ]
}
