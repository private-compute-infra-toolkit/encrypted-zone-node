set -o errexit
set -o nounset

DEVKIT="$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")"
readonly DEVKIT

readonly SCRIPTS="${DEVKIT}/../scripts"
readonly IMAGES="${DEVKIT}/../images"

source "${SCRIPTS}/lib_logging.sh"

PROJECT_ROOT="$("${SCRIPTS}/find_project_root.py")"
readonly PROJECT_ROOT

PYCHARM_IDE_IMAGE="$("${SCRIPTS}/docker/build.py" pycharm-ide --print-tag --search-path "${IMAGES}" --log-file "${DEVKIT_LOG_FILE}" --config "${PROJECT_ROOT}/devkit.json")" || {
  echo "Build failed. See logs for details: ${DEVKIT_LOG_FILE}" >&2
  exit 1
}
readonly PYCHARM_IDE_IMAGE

JETBRAINS_CONFIG_HOME="${HOME}/.config/JetBrains"
JETBRAINS_CACHE_HOME="${HOME}/.cache/JetBrains"
JETBRAINS_SHARE_LOCAL_HOME="${HOME}/.local/share/JetBrains"
SYMBOLS_SHARE_LOCAL_HOME="${HOME}/.local/share/Symbols"
HOME_JAVA="${HOME}/.java"

mkdir -p "${JETBRAINS_CONFIG_HOME}"
mkdir -p "${JETBRAINS_CACHE_HOME}"
mkdir -p "${JETBRAINS_SHARE_LOCAL_HOME}"
mkdir -p "${SYMBOLS_SHARE_LOCAL_HOME}"
mkdir -p "${HOME_JAVA}"

DISPLAY_SOCKET="/tmp/.X11-unix"

"${SCRIPTS}/docker_run" \
  --volume="${JETBRAINS_CONFIG_HOME}:${JETBRAINS_CONFIG_HOME}" \
  --volume="${JETBRAINS_CACHE_HOME}:${JETBRAINS_CACHE_HOME}" \
  --volume="${JETBRAINS_SHARE_LOCAL_HOME}:${JETBRAINS_SHARE_LOCAL_HOME}" \
  --volume="${SYMBOLS_SHARE_LOCAL_HOME}:${SYMBOLS_SHARE_LOCAL_HOME}" \
  --volume="${HOME_JAVA}:${HOME_JAVA}" \
  --volume="${DISPLAY_SOCKET}:${DISPLAY_SOCKET}" \
  --env="DISPLAY" \
  "${PYCHARM_IDE_IMAGE}" \
  /opt/pycharm/bin/pycharm
