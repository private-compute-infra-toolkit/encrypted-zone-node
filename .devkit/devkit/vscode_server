set -o errexit
set -o nounset

DEVKIT="$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")"
readonly DEVKIT

readonly SCRIPTS="${DEVKIT}/../scripts"
readonly IMAGES="${DEVKIT}/../images"

source "${SCRIPTS}/lib_logging.sh"

PROJECT_ROOT="$("${SCRIPTS}/find_project_root.py")"
readonly PROJECT_ROOT

VSCODE_SERVER_IMAGE="$("${SCRIPTS}/docker/build.py" vscode-server --print-tag --search-path "${IMAGES}" --log-file "${DEVKIT_LOG_FILE}" --config "${PROJECT_ROOT}/devkit.json")" || {
  echo "Build failed. See logs for details: ${DEVKIT_LOG_FILE}" >&2
  exit 1
}
readonly VSCODE_SERVER_IMAGE

declare -r CODE_SERVER_CONFIG_HOME="${HOME}/.config/code-server"
declare -r CODE_SERVER_SHARE_LOCAL_HOME="${HOME}/.local/share/code-server"
declare -r MICROSOFT_CACHE_HOME="${HOME}/.cache/Microsoft"
declare -r GOOGLE_VSCODE_EXTENSION_CACHE_HOME="${HOME}/.cache/google-vscode-extension"
declare -r CLOUD_CODE_CACHE_HOME="${HOME}/.cache/cloud-code"

mkdir -p "${CODE_SERVER_CONFIG_HOME}"
mkdir -p "${CODE_SERVER_SHARE_LOCAL_HOME}"
mkdir -p "${MICROSOFT_CACHE_HOME}"
mkdir -p "${GOOGLE_VSCODE_EXTENSION_CACHE_HOME}"
mkdir -p "${CLOUD_CODE_CACHE_HOME}"

"${SCRIPTS}/docker_run" \
  "--volume=${CODE_SERVER_CONFIG_HOME}:${CODE_SERVER_CONFIG_HOME}" \
  "--volume=${CODE_SERVER_SHARE_LOCAL_HOME}:${CODE_SERVER_SHARE_LOCAL_HOME}" \
  "--volume=${MICROSOFT_CACHE_HOME}:${MICROSOFT_CACHE_HOME}" \
  "--volume=${GOOGLE_VSCODE_EXTENSION_CACHE_HOME}:${GOOGLE_VSCODE_EXTENSION_CACHE_HOME}" \
  "--volume=${CLOUD_CODE_CACHE_HOME}:${CLOUD_CODE_CACHE_HOME}" \
  "${VSCODE_SERVER_IMAGE}" \
  code-server --auth=none "$@" "${PWD}"
